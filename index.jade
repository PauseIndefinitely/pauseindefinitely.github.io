      script.
        if (chrome.app.isInstalled) {
          document.getElementById('install-button').style.display = 'none';
        }

    p.social
      span.twitter
        a(href="http://twitter.com/share" class="twitter-share-button" data-url="http://pauseindefinitely.com" data-text="Pause Netflix indefinitely without getting Playback Timeout errors." data-count="horizontal" data-via="adamfschwartz")
