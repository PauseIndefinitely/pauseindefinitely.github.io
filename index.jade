      span.facebook
        span(class="fb-share-button" data-href="http://pauseindefinitely.com" data-layout="button_count")

      script.
        (function(){
          var interval = setInterval(function(){
            if (document.querySelector('.social').getElementsByTagName('iframe').length === 2) {
              document.querySelector('.social').className += ' loaded';
              clearInterval(interval);
            }
          }, 250);
        })();

